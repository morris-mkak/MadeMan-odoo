<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mademan_visit_form_view">
        <field name="name">mademan.visit.form</field>
        <field name="model">mademan.visit</field>
        <field name="arch" type="xml">
            <form string="Visit Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="customer_id"/>
                        <field name="service_ids" widget="many2many_tags"/>
                        <field name="charge_ids" widget="one2many_list"/>
                        <field name="payment_ids" widget="one2many_list"/>
                        <field name="completed"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
